<section>
    <div class="container">

        <div id="carouselExample" class="carousel slide" data-ride="carousel" data-interval="9000">
            <div class="carousel-inner row w-100 mx-auto" role="listbox">
                @foreach (var promo in Model)
                {
                    <div class="carousel-item col-md-3  active">
                        <div class="product-grid">
                            <div class="product-image">
                                <a href="#">
                                    <img class="pic-1" src="data:image/jpeg;base64,@(Convert.ToBase64String(promo.Productos.Image))">
                                    <img class="pic-2" src="data:image/jpeg;base64,@(Convert.ToBase64String(promo.Productos.Image))">
                                </a>
                                <ul class="social">
                                    <li><a href="" data-tip="Quick View"><i class="fa fa-search"></i></a></li>
                                    <li><a href="" data-tip="Add to Wishlist"><i class="fa fa-shopping-bag"></i></a></li>
                                    <li><a href="" data-tip="Add to Cart"><i class="fa fa-shopping-cart"></i></a></li>
                                </ul>
                                <span class="product-new-label">Sale</span>
                                <span class="product-discount-label">@promo.Descuento</span>
                            </div>
                            <div class="product-content">
                                <h3 class="title"><a href="#">@promo.Productos.NombreProducto</a></h3>
                                <div class="price">
                                    $16.00
                                    <span>$20.00</span>
                                </div>
                                <a class="add-to-cart" href="">+ Add To Cart</a>
                            </div>
                        </div>
                    </div>
                }

                
                
            <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next text-faded" href="#carouselExample" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div><!-- END CAROUSEL-->
    </div>
</section>


