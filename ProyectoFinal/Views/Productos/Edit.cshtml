@model Proyecto.Models.Productos

@{
    ViewData["Title"] = "Edit";
}


<div class="container">
    <h2>Editar Producto</h2>
    <hr />
    <div class="row col-md-12">
        <div class="col-md-4">

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProductoID" />
                <div class="form-group font-weight-bold">
                    <label asp-for="NombreProducto" class="control-label">Nombre de Producto</label>
                    <input asp-for="NombreProducto" class="form-control" />
                    <span asp-validation-for="NombreProducto" class="text-danger"></span>
                </div>
                <div class="form-group font-weight-bold">
                    <label asp-for="Existencia" class="control-label"></label>
                    <input asp-for="Existencia" class="form-control" />
                    <span asp-validation-for="Existencia" class="text-danger"></span>
                </div>
                <div class="form-group font-weight-bold">
                    <label asp-for="Precio" class="control-label"></label>
                    <input asp-for="Precio" class="form-control" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Descontinuado" /> @Html.DisplayNameFor(model => model.Descontinuado)
                    </label>
                </div>
                <div class="form-group font-weight-bold">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group font-weight-bold">
                    <label asp-for="CategoriaID" class="control-label"></label>
                    <select asp-for="CategoriaID" class="form-control" asp-items="ViewBag.CategoriaID"></select>
                    <span asp-validation-for="CategoriaID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Regresar a lista principal</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
