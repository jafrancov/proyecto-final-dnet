@model IEnumerable<Proyecto.Models.Productos>

@{
    ViewData["Title"] = "Index";
}



<div class="container">

    <div>
        <p>
            <a asp-action="Create" class="btn btn-primary btn-lg "><i class="fas fa-plus"></i> Producto</a>
        </p>
    </div>

    <div class="row col-md-12">



        <table class="table table-bordered table-condensed table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreProducto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Existencia)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Precio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descontinuado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Image)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categorias)
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Image))">
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreProducto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Existencia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Precio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descontinuado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categorias.NombreCategoria)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ProductoID" class="text-primary" title="Editar"><i class="fas fa-fw fa-lg fa-pencil-alt"></i></a>&nbsp;&nbsp;&nbsp;
                            <a asp-action="Details" asp-route-id="@item.ProductoID" class="text-info" title="Ver Detalles"><i class="fas fa-fw fa-lg fa-eye"></i></a>&nbsp;&nbsp;&nbsp;
                            <a asp-action="Delete" asp-route-id="@item.ProductoID" class="text-danger" title="Eliminar"><i class="fas fa-fw fa-lg fa-times"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>


