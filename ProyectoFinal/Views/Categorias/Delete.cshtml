@model Proyecto.Models.Categorias

@{
    ViewData["Title"] = "Delete";
}

<div class="container">

    <h2>Eliminar Categoría</h2>
    <hr />
        <dl class="row col-md-12">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NombreCategoria)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreCategoria)
