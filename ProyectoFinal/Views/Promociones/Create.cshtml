@model Proyecto.Models.Promociones

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h2>Agregar Promoción</h2>
    <hr />
    <div class="row">
        <div class="row col-md-12">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group font-weight-bold">
                        <label asp-for="Descuento" class="control-label">Descuento</label>
                        <input asp-for="Descuento" class="form-control" />
                        <span asp-validation-for="Descuento" class="text-danger"></span>
                    </div>
                    <div class="form-group font-weight-bold">
                        <label asp-for="FechaInicio" class="control-label">Fecha Inicial</label>
                        <input asp-for="FechaInicio" class="form-control" />
                        <span asp-validation-for="FechaInicio" class="text-danger"></span>
                    </div>
                    <div class="form-group font-weight-bold">
                        <label asp-for="FechaFin" class="control-label">Fecha Final</label>
                        <input asp-for="FechaFin" class="form-control" />
                        <span asp-validation-for="FechaFin" class="text-danger"></span>
                    </div>
                    <div class="form-group font-weight-bold">
                        <label asp-for="ProductoID" class="control-label">Producto</label>
                        <select asp-for="ProductoID" class="form-control" asp-items="ViewBag.ProductoID"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Agregar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
           </div>
        </div>
        <div>
            <a asp-action="Index">Regresar a lista principal</a>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
