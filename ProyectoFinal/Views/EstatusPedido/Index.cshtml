@model IEnumerable<Proyecto.Models.EstatusPedido>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Estatus</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Descripción del Estatus
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescEstatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EstatusID" class="btn btn-outline-primary btn-sm">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.EstatusID" class="btn btn-outline-success btn-sm">Detalle</a> 
                <a asp-action="Delete" asp-route-id="@item.EstatusID" class="btn btn-outline-danger btn-sm">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
