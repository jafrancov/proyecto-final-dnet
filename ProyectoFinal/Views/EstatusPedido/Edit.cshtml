@model Proyecto.Models.EstatusPedido

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h4>Editar Pedido</h4>
    <hr />
    <div class="row col-md-12">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="EstatusID" />
                <div class="form-group font-weight-bold">
                    <label asp-for="DescEstatus" class="control-label">Descripción</label>
                    <input asp-for="DescEstatus" class="form-control" />
                    <span asp-validation-for="DescEstatus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Regresar a lista principal</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
